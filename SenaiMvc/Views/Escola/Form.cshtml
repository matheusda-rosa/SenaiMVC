@using SenaiMvc.Models.Escola

@model EscolaModel

<h1 class="mb-4 text-primary border-bottom pb-2">Cadastro de Escola</h1>

<div class="card shadow-sm p-4 bg-light">
	<form method="post" asp-action="Form" asp-controller="Escola">
		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="Endereco.Id" />

		<div class="mb-3">
			<label class="form-label fw-semibold">Nome da Escola</label>
			<input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome da escola" />
			@Html.ValidationMessageFor(mbox => mbox.Nome, "", new { @class = "text-danger" })
		</div>

		<h5 class="text-secondary mt-4 mb-3">Endereço</h5>
		<div class="row g-3">
			<div class="col-md-5">
				<label class="form-label">Rua</label>
				<input type="text" class="form-control" asp-for="Endereco.Rua" placeholder="Rua da escola" />
				@Html.ValidationMessageFor(mbox => mbox.Endereco.Rua, "", new { @class = "text-danger" })
			</div>
			<div class="col-md-5">
				<label class="form-label">Bairro</label>
				<input type="text" class="form-control" asp-for="Endereco.Bairro" placeholder="Bairro" />
				@Html.ValidationMessageFor(mbox => mbox.Endereco.Bairro, "", new { @class = "text-danger" })
			</div>
			<div class="col-md-2">
				<label class="form-label">Número</label>
				<input type="number" class="form-control" asp-for="Endereco.Numero" placeholder="Nº" />
				@Html.ValidationMessageFor(mbox => mbox.Endereco.Numero, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="row g-3 mt-3">
			<div class="col-md-6">
				<label class="form-label">Estado</label>
				<select asp-for="Endereco.Estado" asp-items="Model.Estados" onchange="escola.carregarCidadesPorUf(this.value)" class="form-select">
					<option value="">-- Selecione um Estado --</option>
				</select>
				@Html.ValidationMessageFor(mbox => mbox.Endereco.Estado, "", new { @class = "text-danger" })
			</div>
			<div class="col-md-6">
				<label class="form-label">Cidade</label>
				<select asp-for="Endereco.Cidade" asp-items="Model.Cidades" class="form-select">
					<option value="">-- Selecione uma Cidade --</option>
				</select>
				@Html.ValidationMessageFor(mbox => mbox.Endereco.Cidade, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
			<button class="btn btn-success px-4" type="submit">Salvar</button>
		</div>
	</form>
</div>

@section Scripts {
	<script src="~/js/Escola.js"></script>
}