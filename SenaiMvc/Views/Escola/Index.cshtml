@using SenaiMvc.Models.Escola
@model List<EscolaModel>

<h1 class="mb-4 text-primary border-bottom pb-2">Lista de Escolas</h1>

<div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3">
    <a class="btn btn-success" asp-controller="Escola" asp-action="Form">
        <i class="bi bi-plus-circle me-1"></i> Novo
    </a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th class="text-center" scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var escola in Model)
                {
                    <tr>
                        <th scope="row">@escola.Id</th>
                        <td>@escola.Nome</td>
                        <td class="text-center">
                            <div class="d-inline-flex gap-2">
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Escola" asp-action="Editar" asp-route-id="@escola.Id" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Escola" asp-action="Excluir" asp-route-id="@escola.Id" title="Excluir">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
